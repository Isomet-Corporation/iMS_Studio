<UserControl x:Class="iMS_Studio.View.AODeviceChooserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iMS_Studio.View"
        mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="FontWeight" Value="Bold" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Column="0" Grid.RowSpan="2" Header="Select an AO Device">
            <ListView x:Name="AODeviceList" ItemsSource="{Binding Path=AODevList}" SelectedIndex="{Binding SelectedAOD}" MinWidth="150"
                         IsEnabled="{Binding ElementName=customParameters, Path=IsChecked, Converter={StaticResource BooleanInvertValueConverter}}"/>
        </GroupBox>
        <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Stretch" />
        <GroupBox Grid.Column="2" Grid.Row="0">
            <GroupBox.Header>
                <CheckBox x:Name="customParameters" Click="customParameters_Click" IsChecked="{Binding CustomAOD}">Or Enter Custom Parameters</CheckBox>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Crystal</Label>
                <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Centre Frequency</Label>
                <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">Sweep Bandwidth</Label>
                <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">Operating Wavelength</Label>
                <Label Grid.Row="4" Grid.Column="0" VerticalAlignment="Center">Geometric Constant</Label>
                <Label Grid.Row="5" Grid.Column="0" VerticalAlignment="Center">Acoustic Velocity</Label>
                <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Center">External Bragg</Label>
                <ComboBox Grid.Row="0" Grid.Column="1" Margin="4" Name="xtalComboBox" SelectedItem="{Binding CrystalType}" IsReadOnly="{Binding ElementName=customParameters, Path=IsChecked, Converter={StaticResource BooleanInvertValueConverter}}" 
                         IsEnabled="{Binding ElementName=customParameters, Path=IsChecked}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBox x:Name="textBoxFC" Grid.Row="1" Grid.Column="1" Margin="4" Text="{Binding CentreFrequency, StringFormat=N1}" IsReadOnly="{Binding ElementName=customParameters, Path=IsChecked, Converter={StaticResource BooleanInvertValueConverter}}" 
                         IsEnabled="{Binding ElementName=customParameters, Path=IsChecked}"></TextBox>
                <TextBox x:Name="textBoxBW" Grid.Row="2" Grid.Column="1" Margin="4" Text="{Binding SweepBandwidth, StringFormat=N1}" IsReadOnly="{Binding ElementName=customParameters, Path=IsChecked, Converter={StaticResource BooleanInvertValueConverter}}" 
                         IsEnabled="{Binding ElementName=customParameters, Path=IsChecked}"></TextBox>
                <TextBox x:Name="textBoxWavelength" Grid.Row="3" Grid.Column="1" Margin="4" Text="{Binding OpWavelength, StringFormat=N3}" IsReadOnly="{Binding ElementName=customParameters, Path=IsChecked, Converter={StaticResource BooleanInvertValueConverter}}" 
                         IsEnabled="{Binding ElementName=customParameters, Path=IsChecked}"></TextBox>
                <TextBox x:Name="textBoxGeom" Grid.Row="4" Grid.Column="1" Margin="4" Text="{Binding GeomConstant, StringFormat=N3}" IsReadOnly="{Binding ElementName=customParameters, Path=IsChecked, Converter={StaticResource BooleanInvertValueConverter}}" 
                         IsEnabled="{Binding ElementName=customParameters, Path=IsChecked}"></TextBox>
                <TextBox x:Name="textBoxVel" Grid.Row="5" Grid.Column="1" Margin="4" Text="{Binding AcousticVelocity, StringFormat=N3}" IsReadOnly="True" IsEnabled="False"></TextBox>
                <TextBox x:Name="textBoxBragg" Grid.Row="6" Grid.Column="1" Margin="4" Text="{Binding ExternalBragg, StringFormat=N2}" IsReadOnly="True" IsEnabled="False"></TextBox>
                <Label Grid.Row="1" Grid.Column="2" VerticalAlignment="Center">MHz</Label>
                <Label Grid.Row="2" Grid.Column="2" VerticalAlignment="Center">MHz</Label>
                <Label Grid.Row="3" Grid.Column="2" VerticalAlignment="Center">um</Label>
                <Label Grid.Row="5" Grid.Column="2" VerticalAlignment="Center">mm/usec</Label>
                <Label Grid.Row="6" Grid.Column="2" VerticalAlignment="Center">mRad</Label>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Vertical">
            <TextBlock Margin="10,5,10,5" TextWrapping="WrapWithOverflow">Click OK to create Compensation Functions for selected AO Device Parameters</TextBlock>
            <Button x:Name="okButton" Margin="80,5,10,5" Command="{Binding OkCommand}">OK</Button>
            <Button x:Name="cancelButton" Margin="80,5,10,5" Command="{Binding CancelCommand}">Cancel</Button>
        </StackPanel>
    </Grid>
</UserControl>
