<UserControl x:Class="iMS_Studio.View.SyncDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vc="clr-namespace:iMS_Studio.ValueConverters"
             xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=DotNetProjects.Wpf.Extended.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="250">
    <UserControl.Resources>
        <ResourceDictionary>
            <vc:BoolToStringConverter x:Key="BoolToIntExtStringConverter" TrueString="Int" FalseString="Ext"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="300" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="0" Grid.Row="0" Header="Sync Data Settings" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
            <StackPanel>
                <TextBlock Text="Analog Sync Output Source A" FontSize="11" Margin="5"/>
                <ComboBox Name="AnlgSyncA" SelectedItem="{Binding Path=AnlgASyncSrc}" Margin="5"/>
                <TextBlock Text="Analog Sync Output Source B" FontSize="11" Margin="5"/>
                <ComboBox Name="AnlgSyncB" SelectedItem="{Binding Path=AnlgBSyncSrc}" Margin="5"/>
                <TextBlock Text="Digital Sync Output Source" FontSize="11" Margin="5"/>
                <ComboBox Name="DigSync" SelectedItem="{Binding Path=DigSyncSrc}" Margin="5"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="0" Grid.Row="1" Header="Digital Sync Pulsed Output" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="10">
                    <CheckBox Margin="5,8,0,5" IsChecked="{Binding PulseEnable}" Name="PulseCheckBox" Grid.Column="1">
                        ALL
                    </CheckBox>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse0Enable}" Name="Pulse0CheckBox" Grid.Column="0" Grid.Row="0"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 0</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse1Enable}" Name="Pulse1CheckBox" Grid.Column="0" Grid.Row="1"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 1</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse2Enable}" Name="Pulse2CheckBox" Grid.Column="0" Grid.Row="2"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 2</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse3Enable}" Name="Pulse3CheckBox" Grid.Column="0" Grid.Row="3"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 3</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse4Enable}" Name="Pulse4CheckBox" Grid.Column="1" Grid.Row="0"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 4</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse5Enable}" Name="Pulse5CheckBox" Grid.Column="1" Grid.Row="1"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 5</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse6Enable}" Name="Pulse6CheckBox" Grid.Column="1" Grid.Row="2"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 6</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse7Enable}" Name="Pulse7CheckBox" Grid.Column="1" Grid.Row="3"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 7</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse8Enable}" Name="Pulse8CheckBox" Grid.Column="2" Grid.Row="0"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 8</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse9Enable}" Name="Pulse9CheckBox" Grid.Column="2" Grid.Row="1"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 9</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse10Enable}" Name="Pulse10CheckBox" Grid.Column="2" Grid.Row="2"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 10</CheckBox>
                        <CheckBox Margin="5,8,0,5" IsChecked="{Binding Pulse11Enable}" Name="Pulse11CheckBox" Grid.Column="2" Grid.Row="3"
                                  IsEnabled="{Binding ElementName=PulseCheckBox, Path=IsChecked, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanInvertValueConverter}}">Bit 11</CheckBox>
                    </Grid>
                        
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock Text="Digital Sync Pulse Length" FontSize="11"/>
                    <Slider Orientation="Horizontal" Value="{Binding PulseLength}" Name="syncPulseSlider" Grid.Column="0" Margin="10"
                                           IsEnabled="{Binding PulseLengthEnable}"
                        Minimum="0.01" Maximum="655.35" TickFrequency="50.00"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <xctk:DoubleUpDown Value="{Binding ElementName=syncPulseSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                           IsEnabled="{Binding PulseLengthEnable}"
                                    Minimum="0.01" Maximum="655.35" Increment="0.01" Width="Auto" Margin="10,3,10,3" HorizontalAlignment="Stretch" Grid.Column ="0" FormatString="F2"/>
                        <TextBlock Text="μs" Width="20" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="0" Grid.Row="2" Header="Digital Sync Output" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">

            <StackPanel Margin="10" >
                <TextBlock Text="Output Delay" FontSize="11"/>
                <Slider Orientation="Horizontal" Value="{Binding SyncDelay}" Name="syncDelaySlider" Margin="10"
                    Minimum="0.00" Maximum="655.35" TickFrequency="50.00"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <xctk:DoubleUpDown Value="{Binding ElementName=syncDelaySlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                Minimum="0.00" Maximum="655.35" Increment="0.01"  Width="Auto" Margin="10,3,10,3" HorizontalAlignment="Stretch" Grid.Column ="0" FormatString="F2"/>
                    <TextBlock Text="μs" Width="20" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                </Grid>
                <TextBlock Text="Polarity" FontSize="11"/>
                <CheckBox Margin="5,8,0,5" IsChecked="{Binding SyncInvert}" Name="SyncInvertBox">
                    Invert
                </CheckBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
