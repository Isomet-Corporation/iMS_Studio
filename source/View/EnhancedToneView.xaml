                    <TextBox Text="{Binding ElementName=Ch1SFreqSlider, Path=Value, UpdateSourceTrigger=Default, StringFormat={}{0:f2}}" TextAlignment="Right" Width="45" />
                    <TextBlock Text="MHz" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2"/>
