<UserControl x:Class="iMS_Studio.View.HWServerConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iMS_Studio.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox FontFamily="Courier New" FontSize="11" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" 
                 Text="{Binding ConsoleText}" Name="console" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                  TextChanged="console_TextChanged" PreviewKeyDown="console_KeyDown"/>
    </Grid>
</UserControl>
